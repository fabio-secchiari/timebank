<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="499.0" prefWidth="697.0" spacing="5.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fabiojava.timebank.gui.controllers.DashboardController">

    <!-- Sezione superiore con gauge e liste -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <!-- Contatore ore (ProgressBar orizzontale) -->
        <VBox alignment="CENTER" minWidth="273.0" prefHeight="235.0" prefWidth="273.0" spacing="10">
            <Text style="-fx-font-size: 16;" text="Le tue ore disponibili" />
            <ProgressBar fx:id="creditBar" prefHeight="51.0" prefWidth="250" progress="0.0" />

            <!-- Td List section -->
            <Text style="-fx-font-size: 14;" text="AttivitÃ  da completare" />
            <ListView fx:id="todoList" prefHeight="150" prefWidth="250" style="-fx-font-size: 12;" />
        </VBox>

        <!-- Lista richieste utente -->
        <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
            <Text style="-fx-font-size: 16;" text="Le tue richieste:" textAlignment="CENTER" underline="true" />
            <ListView fx:id="userRequestsList" VBox.vgrow="ALWAYS" />
            <Button fx:id="newRequestButton" text="Nuova richiesta" textAlignment="CENTER" />
        </VBox>

        <!-- Lista offerte utente -->
        <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
            <Text style="-fx-font-size: 16;" text="Le tue offerte:" underline="true" />
            <ListView fx:id="userOffersList" VBox.vgrow="ALWAYS" />
            <Button fx:id="newOfferButton" text="Nuova offerta" />
         <HBox.margin>
            <Insets />
         </HBox.margin>
        </VBox>
      <VBox.margin>
         <Insets left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
    </HBox>

    <!-- Sezione inferiore -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Ultimi record inseriti -->
        <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
            <Text style="-fx-font-size: 16;" text="Ultimi annunci inseriti" underline="true" />
            <TableView fx:id="latestRecordsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="recordTypeColumn" text="Tipo" />
                    <TableColumn fx:id="recordTitleColumn" text="Titolo" />
                    <TableColumn fx:id="recordUserColumn" text="Utente" />
                    <TableColumn fx:id="recordDateColumn" text="Data" />
                </columns>
            </TableView>
        </VBox>

        <!-- Valutazioni ricevute -->
        <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
            <Text style="-fx-font-size: 16;" text="Le tue valutazioni ricevute" underline="true" />
            <TableView fx:id="ratingsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="ratingTypeColumn" text="Ruolo" />
                    <TableColumn fx:id="ratingValueColumn" text="Voto" />
                    <TableColumn fx:id="ratingCommentColumn" text="Commento" />
                    <TableColumn fx:id="ratingDateColumn" text="Data" />
                </columns>
            </TableView>
        </VBox>
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
    </HBox>

</VBox>
